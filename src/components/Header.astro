<style>
header {
  padding: 20px;
background-color: #FB8500;}
.logo-container {
    max-width: 100px;
    margin: 0;
    margin-right: 20px;
    margin-left: 56px;}
.text-container{
    font-family: "Hind", sans-serif;
    font-weight: 500;
    font-style: normal;    
}
img {
  width: 100%;
  height: 100%;
  display: block;
  max-width: 55%;
  height: auto;
}
.inside-header {
    width: min(1200px, 100% - 4rem);
    padding: 0px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
nav ul {
    display: flex;
    justify-content: space-between;
    width: 100%;
    list-style: none;}
nav a {
    text-decoration: none;
    color: #FBFBFF;}
nav a:hover {
    text-decoration: none;
    color: #023047;}
#icons {
  cursor: pointer;
  display: none;
}

@media screen and (max-width: 881px) {
  #icons {
    display: block;
  }
  #icons::before{
    content: "\2630";
  }
  .active #icons::before{
    content: "\2715";
  }
  nav ul {
    position: fixed;
    left: 100%;
    top: 20%;
    flex-direction: column;
    background: #FB8500;
    width: 20%;
    text-align: center;
    transition: 0.25s;
  }
  nav li{
    padding: 3px 0;
  }
  nav li:hover {
    background: #023047;
  }
  nav.active ul{
    left: 0;
  }
}
</style>